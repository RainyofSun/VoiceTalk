platform :ios, '10.0'
source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!

def all_Pods
# 参考库使用链接 https://www.jianshu.com/p/b9569ade2a75
# 网络封装库
    pod 'Alamofire'
    pod 'Moya', '~> 14.0'
# 加载指示器
    pod 'NVActivityIndicatorView'
# 下拉刷新控件
#   pod 'DGElasticPullToRefresh'
# 检查应用当前的网络连接状况
    pod 'ReachabilitySwift'
# 布局框架
    pod 'SnapKit'
# 动画框架
#   pod 'Spring'
# 主要应用于UIView.animateWithDuration(_:, animations:...)
    pod 'EasyAnimation'
# 主要使用于Interface Builder
#    pod 'IBAnimatable'
# 使用3D touch 被引用的两个动画特性peek、pop
#    pod 'PeekPop'
# 转场动画
#    pod 'StarWars', '~> 2.0'
# 数字变形过渡动画
#   pod 'NumberMorphView'
# 自定义的进度加载动画
#   pod 'FillableLoaders'
# 数据map映射
    pod 'HandyJSON'
# 数据存储 UserDefaults
    pod 'SwiftyUserDefaults'
# 字符串扩展
#   pod 'SwiftString'
# 轻量级构建聊天应用的框架
    pod 'Chatto'
# 卡片视图，而且滑动视图有滑动卡片一样的动画效果
#   pod 'Koloda'
# 图片选择器
    pod 'ImagePicker'
# 关于Material design做的一系列UI组件
#   pod 'MaterialKit'
# 集Animation和UI与一身，还有Icon、Color等元素
    pod 'Material'
# 集成引导页，具有不错的动画效果
#   pod 'RazzleDazzle'
# 应用于操作指南、新手教程
    pod 'Instructions'
# 给tabbar items各单元添加动画效果
    pod 'RAMAnimatedTabBarController'
# 折叠的cell效果，动画很nice
#   pod 'FoldingCell', '~> 5.0.2'
# Alert
    pod 'SCLAlertView'
# Button 有动画效果的button，适用于收藏、喜欢、点赞等
#   pod 'DOFavoriteButton'
#   pod 'hamburger-button'
# Switch turned on覆盖父视图的动画效果
    pod 'RAMPaperSwitch' 
# Label
    pod 'LTMorphingLabel'
    pod 'ActiveLabel'
# TextField
    pod 'TextFieldEffects'
    pod 'PhoneNumberKit'
# TextView
#   pod 'NextGrowingTextView'
# Font、Color
    pod 'Hue'
# CoreText、AttributeText
    pod 'TextAttributes'
# GPUImage的Swift版，GPU加速image和video的处理
#   pod 'GPUImage2'
# 图片加载、缓存 -- Kingfisher HanekeSwift 二选一
#   pod 'Kingfisher'
# Gif Gifu JWAnimatedImage 二选一
#   pod 'JWAnimatedImage'
# 给图片加滤镜效果，有很多种滤镜 Toucan Filterpedia 二选一
#   pod 'Filterpedia'
# 滑动出现不同分页的一个pagemenu，用于不同状态分页效果上是很好的选择。
#   pod 'PageMenu'
# Asynchronous 异步处理框架 Async PromiseKit 二选一
    pod 'Async'
# KVO
#   pod 'Observable-Swift'
# 权限管理
#   pod 'PermissionScope'
# App内购
    pod 'SwiftyStoreKit'
# App间跳转、DeepLink
    pod 'Appz'
# SVG
    pod 'SVGKit'
#    pod 'Reachability'
#    pod 'LDNetDiagnoService'
end

target 'VoiceTalk' do
   all_Pods
end
